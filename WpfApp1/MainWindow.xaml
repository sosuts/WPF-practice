<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ログコピーアプリ"
        MinHeight="300"
        Height="300"
        Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <Label Content="From:"
               Grid.Row="0"
               Grid.Column="0"
               Margin="10" />
        <DatePicker x:Name="fromDatePicker"
                    Grid.Row="0"
                    Grid.Column="1"
                    Margin="10" />
        <Label Content="To:"
               Grid.Row="1"
               Grid.Column="0"
               Margin="10" />
        <DatePicker x:Name="toDatePicker"
                    Grid.Row="1"
                    Grid.Column="1"
                    Margin="10" />
        <Label Content="フォルダ名:"
               Grid.Row="2"
               Grid.Column="0"
               Margin="10" />
        <TextBox x:Name="folderNameTextBox"
                 Grid.Row="2"
                 Grid.Column="1"
                 Margin="10"
                 Text="{Binding FolderName, UpdateSourceTrigger=PropertyChanged}" />
        <Label Content="コピー先:"
               Grid.Row="3"
               Grid.Column="0"
               Margin="10" />
        <TextBox x:Name="destinationTextBox"
                 Grid.Row="3"
                 Grid.Column="1"
                 Margin="10" />
        <Button Content="参照"
                Grid.Row="4"
                Grid.Column="1"
                Margin="10 0 10 10"
                Width="100"
                HorizontalAlignment="Right"
                Click="BrowseButton_Click" />
        <Grid Grid.Row="5" Grid.ColumnSpan="2">
        <!--画面全体を2分割して保存ボタンとキャンセルボタンを追加-->
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Button Content="保存"
                    Name="SaveButton"
                    Grid.Column="0"
                    Margin="10 0 10 0"
                    Click="CopyLogsButton_Click" />
            <Button Content="閉じる"
                    Name="CloseButton"
                    Grid.Column="1"
                    Margin="10 0 10 0"
                    Click="CloseButton_Click"/>
        </Grid>
    </Grid>
</Window>
